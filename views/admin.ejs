<!DOCTYPE html/>
<html ng-app="adminApp">
<head>
    <title>admin</title>
    <% styles.forEach(function (style) { %>
    <link rel="stylesheet" href="<%= style %>"/>
    <% }) %>
    <script type="text/javascript">
        var themeColour = 'black';
    </script>
    <% scripts.forEach(function (script) { %>
    <script type="text/javascript" src="<%= script %>"></script>
    <% }) %>
</head>
<body>
    <div ng-controller="NavCtrl">
        <nav class="navbar-default navbar-inverse" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" ng-href="{{NavUrl('index')}}">FlyBoard</a>
                </div>

                <div class="collapse navbar-collapse" id="navbar-collapse">
                    <div class="btn-group select-project right-divider-vertical" ng-if="project">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                          {{project.name}}
                          <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu pull-left" role="menu">
                            <li ng-repeat="project in projects"><a href="" ng-click="selectProject(project)">{{project.name}}</a></li>
                        </ul>
                    </div>

                    <ul class="nav navbar-nav">
                        <li><a ng-href="{{NavUrl('stat')}}">数据</a></li>
                        <li class="active"><a ng-href="{{NavUrl('admin')}}">数据源管理</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div ng-view>
    </div>

</body>
</html>